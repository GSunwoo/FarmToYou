<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.farm.service.ICommentService">
	
	
	<select id="getComment" parameterType="Long"
		resultType="com.farm.dto.CommentDTO">
		SELECT * FROM comment
		WHERE com_id = #{com_id}	
	</select>
	<update id="updateComment" parameterType="com.farm.dto.CommentDTO">
		UPDATE comment SET
			com_content = #{com_content}
		WHERE com_id = #{com_id}
	</update>
</mapper>